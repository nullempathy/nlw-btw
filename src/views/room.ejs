<!DOCTYPE html>
  <head>
    <title>Rocket.Q - Questions and Answers</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/room.css">
    <link rel="stylesheet" href="/styles/modal.css">
    <script src="/scripts/main.js" defer type="module"></script>
  <head>
  <body>
    <div id="room" class="content">
      <header>
        <a href="/">
          <img src="/images/logo.svg" alt="Rocket.Q Logo"/>
        </a>
        <div class="buttons">
          <div class="button outlined" id="room-id" data-id="<%= roomId %>">
            #<%= roomId %>  
            <img src="/images/copy.svg" alt="Copy room number"/>
          </div>
          <a href="/create-pass" class="button">
            <img src="/images/users.svg" class="users-white" alt="Create a room">
            Create room
          </a>
        </div>
      </header> 
      
      <main>
        <section id="question-form">
          <h2>Ask your question</h2>
          <form action="/question/create/<%= roomId %>" method="POST">
            <label class="sr-only" for-id="question">What do you want to ask?</label>
            <textarea name="question" id="question" placeholder="What do you want to ask?"></textarea>
            <footer>
              <div>
                <img src="/images/lock.svg" alt="Padlock">
                This question is anonymous 
              </div>
              <button>Send</button>
            </footer>
          </form>
        </section>

        <section id="questions">
          <h2 class="sr-only">Community Questions</h2>
          <div class="questions">

            <% questions.forEach(question => { %>
               <div class="question-wrapper">
                <div class="question-content">
                  <div class="user">
                    <img src="/images/avatar.svg" alt="Avatar">
                  </div>
                  <div class="question">
                    <p><%= question.title %></p> 
                  </div>
                </div>
                <div class="actions">
                  <a href="#" class="check" data-id="<%= question.id %>">
                    <img src="/images/check.svg" alt="Mark as read">
                    Mark as read 
                  </a>
                  <a href="#" class="delete" data-id="<%= question.id %>">
                    <img src="/images/trash.svg" alt="Delete">
                    Delete 
                  </a>
                </div>
              </div>           
            <% }); %>

            <% questionsRead.forEach(questionRead => { %>
              <div class="question-wrapper read">
                <div class="question-content">
                  <div class="user">
                    <img src="/images/avatar.svg" alt="Avatar">
                  </div>
                  <div class="question">
                    <p><%= questionRead.title %></p> 
                  </div>
                </div>
                <div class="actions">
                  <a href="#" class="delete" data-id="<%= questionRead.id %>">
                    <img src="/images/trash.svg" alt="Delete">
                    Delete 
                  </a>
                </div>
              </div>
            <% }); %>

          </div>
        </section>

      </main>    

    </div>

    <!------ MODAL ------> 
    <div class="modal-wrapper">
      <div class="modal">
        <h2>Delete question</h2>
        <p>Are you sure you want to delete this question?</p>
        <form action="" method="POST">
          <label class="sr-only" for-id="password">Enter your admin password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password"/>
          <div class="buttons">
            <div class="button gray cancel">Cancel</div>
            <button class="red">Yes, delete</button>
          </div>
        </form> 
      </div>
    </div> 

  </body>
</html>
